<div data-sticky-container>
  <div class="title-bar" data-sticky data-options="marginTop: .065;" style="width:100%">
    <div class="title-bar-left">
      <p class="text-left"><%="Logged in as #{current_user.username}"%></p>
      <% if current_user%>
        <%= link_to "Logout", logout_path, method: :delete, class: "logo" %>
      <% else %>
        <%= link_to "Login", login_path, class: "logo" %>
      <% end  %>
    </div>
    <div class="title-bar-right">
        <a href= "<%= trip_path %>" class="cart-icon"><i class=" logo fi-shopping-bag"></i></a>
    </div>
    <div class="menu-centered">
      <ul class = "menu">
        <h4 class="logo">Eccentric</h4>
        <% unless @destinations.nil? %>
          <% @destinations.each do |destination| %>
            <li><%= link_to destination.planet, destination_path(destination.planet), class: "button" %></li>
          <% end %>
          <li><%= link_to "All Packages", packages_path, class: "button" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
