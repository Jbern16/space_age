<div class="full-create-account">
  <div class="row login-page">
    <div class="medium-6 medium-centered large-4 large-centered columns">
      <%=form_for(:session, url:login_path) do |f| %>
        <div class="row column log-in-form">
          <h4 class="text-center">Please Log In</h4>
          <div class="login_form">
            <%= f.text_field :username, placeholder: "Username", type: "text" %>
            <%= f.password_field :password, placeholder: "Password", type: "text" %>
            <%= f.submit "Sign In", class: "button expanded" %>
          </div>
          <p class="text-center"><%= link_to "Create Account", signup_path %></p>
        </div>
        <% end %>
    </div>
  </div>
</div>
