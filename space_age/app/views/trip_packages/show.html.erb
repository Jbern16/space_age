
<div class="row column cart">
  <% unless @packages.nil? %>
    <% @packages.each do |package| %>
    <div class="column package">
      <div class="pricing-table">
        <p class="title"><%= package.title %></p>
        <p class="price">$<%=  package.price * package.quantity(session[:trip], package.id) %>
          <hr>
        </p>

        <p class="bullet-item"><%= package.quantity(session[:trip], package.id) %></p>
        <p class="bullet-item"><%= button_to "+", trip_package_path(package, package.id, operation: "+"), method: 'patch' %></p>
        <p class="bullet-item"><%= button_to "-", trip_package_path(package, package.id, operation: "-"), method: 'patch' %></p>
        <p class="cta-button"><%= button_to "Remove", trip_package_path(package), method: :delete  %></p>
      </ul>
    </div>
    <% end %>
  <% else %>
    <h2> Your Cart is Empty</h1>
  <% end  %>
  <div class="row">
    Total Price: <%= @total_price %>
  </div>
</div>
